{
  "settings": {
    "analysis": {
      "analyzer": {
        "nori_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "nori_readingform",
            "lowercase",
            "trim"
          ]
        },
        "korean_english_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "nori_readingform",
            "lowercase",
            "asciifolding",
            "trim"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "nori_analyzer",
        "fields": {
          "eng": { "type": "text", "analyzer": "korean_english_analyzer" },
          "keyword": { "type": "keyword" }
        }
      },
      "brand": {
        "type": "text",
        "analyzer": "nori_analyzer",
        "fields": {
          "eng": { "type": "text", "analyzer": "korean_english_analyzer" },
          "keyword": { "type": "keyword" }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "nori_analyzer",
        "fields": {
          "eng": { "type": "text", "analyzer": "korean_english_analyzer" },
          "keyword": { "type": "keyword" }
        }
      },
      "category": {
        "type": "nested",
        "properties": {
          "name": {
            "type": "text",
            "analyzer": "nori_analyzer",
            "fields": {
              "eng": { "type": "text", "analyzer": "korean_english_analyzer" },
              "keyword": { "type": "keyword" }
            }
          }
        }
      }
    }
  }
}
